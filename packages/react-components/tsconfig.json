{
    "compilerOptions": {
        "module": "ESNext",
        "noImplicitAny": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/**/*.test.*"]
}
