{
    "name": "@x3r5e/component-styles",
    "version": "0.11.1",
    "description": "Component Styles",
    "files": [
        "dist/"
    ],
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "prepublishOnly": "npm run build",
        "postpublish": "chmod u+x ../../scripts/postpublish.sh && ../../scripts/postpublish.sh",
        "build": "npm-run-all buildDesignTokens tsm rollup",
        "start": "npm-run-all --parallel --race tsm:watch rollup:watch",
        "rollup": "rollup -c",
        "rollup:watch": "rollup -c -w",
        "tsm": "tsm --banner '// This is an auto-generated file\n\n' --exportType default src/components",
        "tsm:watch": "tsm --watch --exportType default src/components",
        "buildDesignTokens": "node --unhandled-rejections=strict ./src/scripts/buildDesignTokens",
        "lint": "npm-run-all eslint stylelint",
        "eslint": "eslint --max-warnings 0 .",
        "stylelint": "cd ../.. && PATH=$(npm bin):$PATH stylelint --max-warnings 0 './packages/component-styles/**/*.(css|scss)' && cd packages/component-styles"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/danlevy1/example-design-system.git",
        "directory": "packages/component-styles"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [],
    "author": "Daniel Levy (https://www.danlevy.info)",
    "license": "MIT",
    "gitHead": "75fb0674ebacb1e211e1c4b2329c567333de16bf",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^11.2.0",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "@x3r5e/design-tokens": "0.16.0",
        "copyfiles": "^2.4.1",
        "eslint": "^7.12.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-compat": "^3.9.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.6",
        "postcss-preset-env": "^6.7.0",
        "postcss-reporter": "^7.0.2",
        "prettier": "^2.2.1",
        "rollup": "^2.39.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-styles": "^3.14.1",
        "sass": "^1.32.8",
        "style-dictionary": "3.0.0-rc.2",
        "typed-scss-modules": "^4.1.0",
        "typescript": "^4.2.2"
    },
    "dependencies": {},
    "peerDependencies": {}
}
